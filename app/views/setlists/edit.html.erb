<div class="col-xs-2"></div>
  <div class ="col-xs-8">

    <p>Edit Setlist</p>

    <%= form_for (@setlist) do |f| %>
      <%= render 'form', f: f %>
      <%= f.submit %>
    <%end%>
    <%= button_to "Delete Setlist", {:controller => :setlists, :action => 'destroy' }, :method => :delete %>


    <br><br>
    <%=form_tag(controller: "setlists", action: "add_song") do %>
      <%# binding.pry %>
      <%=select('@songs', '@songs.ids', options_for_select(current_user.songs.collect{ |s| [s.title, s.id] })) %>
      <%= flash[:no_songs] %>
      <%= submit_tag('Add Song To Setlist')  %>
    <%end%>

    <% @setlist.songs.each do |s|%>
      <li> <%= s.title%> <%= button_to "delete", {:controller => :setlists, :song_id => s.id, :action => 'destroy_song' }, :method => :delete %>
      <br>
    <%end%>

  </div>

<div class="col-xs-2"></div>
